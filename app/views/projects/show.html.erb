<div class="is_backed">
  <% @project.pledges.each do |p| %>  
    <% if p.user == current_user %>
      <p id="backed">You have backed this project</p>
      <% break %>
    <% end %>
  <% end %>
</div>

<div class="show_project" id=<%= @project.id %>>
  <%= render @project %>
</div>


<div class="show_tiers">

  <h3>Pledge tiers:</h3>
  <%= render partial: "projects/tiers", collection: @tier %>

</div>


<div class="tags">
  <%= render partial: "tags" %>
</div>

<div class="comments">
  <%= render partial: "comments/index", locals: {comments: @project.comments}  %>
  <%= render partial: "comments/form", locals: {commentable: @project} %>
</div>

