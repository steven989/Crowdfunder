
<div class="project">
    <p><%= link_to project.title, project_path(project) %>
    by <%= /(.*)@/.match(project.user.email)[1] %>
    </p>
    <% if project.category %>
    <p>Category: <%= project.category.name %></p>
    <% end %>
    <p>Description:</p>
    <p><%= project.description %></p>
    <p>Start: <%= project.start_date %></p>
    <p>End: <%= project.end_date %></p>
    <p>Goal: <%= project.goal %></p>
    <p id="raised">Amount raised: <span><%= Project.total_amount(project.id) %></span></p>

    <p>Time remaining: <%= [(project.end_date - Date.today).to_i,0].max %></p>  
    <p>Tags: <%= raw project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>

    <% if project.user == current_user %>

        <p> <%= link_to 'Edit project', edit_project_path(project) %> </p>
        <p> <%= link_to 'Delete project', project_path(project), method: 'delete' %> </p>

    <% end %>

    <br>
</div>